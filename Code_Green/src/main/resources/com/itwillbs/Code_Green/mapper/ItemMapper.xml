<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.itwillbs.Code_Green.mapper.ItemMapper">


	<!-- 상품 조회수 증가 -->
	<update id="updateReadcount">
		UPDATE item
			SET
				item_readcount = item_readcount + 1
			WHERE
				item_idx = #{item_idx}
	</update>

	<!-- 상품 상세 정보 조회 -->
	<select id="selectItem" resultType="com.itwillbs.Code_Green.vo.ItemVO">
		SELECT * 
				FROM item
				WHERE
					item_idx = #{item_idx}
	</select>
	
	<!-- 상품 후기 -->
	<select id="selectReview" resultType="com.itwillbs.Code_Green.vo.BoardVO">
		SELECT * 
				FROM board
				WHERE
					board_item_idx = #{item_idx}
				<if test="searchType.equals('subject')">
					ORDER BY board_date DESC
				</if>
	</select>
	
	<!-- 상품 후기 갯수-->
	<select id="selectReviewListCount" resultType="integer">
		SELECT 
				COUNT(*) 
				FROM board
				WHERE
					board_item_idx = #{item_idx}
	</select>
	
	
		<!-- 유제품/음료 카테고리 -->
	<select id="select_dairy_drink" resultType="com.itwillbs.Code_Green.vo.ItemVO">
		SELECT * 
		FROM item 
		WHERE item_category = "유제품/음료";
	</select>
	
	<!-- 해산물 카테고리 -->
	<select id="select_fish" resultType="com.itwillbs.Code_Green.vo.ItemVO">
		SELECT * 
		FROM item 
		WHERE item_category = "해산물";
	</select>
	
	<!-- 전체 상품 갯수 조회(검색 기능 추가 아직) -->
	<select id="selectItemListCount" resultType="integer">
		SELECT 
			COUNT(*) 
			FROM item
	</select>
	
	<!-- 상품 목록 조회(검색 기능 추가 아직) -->
	<select id="selectItemList" resultType="com.itwillbs.Code_Green.vo.ItemVO">
		SELECT * 
			FROM item
			ORDER BY
				item_idx DESC
	</select>
	
	
</mapper>
